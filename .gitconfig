[core]
	excludesfile = "/home/andy/.gitignore"
	whitespace = tabwidth=4

[color]
	ui = true
	status = auto
	branch = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = white
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = white bold
	whitespace = red reverse
[color "status"]
	added = yellow
	changed = white
	new = white bold
[diff]
	noprefix = true

[push]
	default = upstream
[branch]
	autosetuprebase = always

[alias]
	st = status
	di = diff
	co = checkout
	ci = commit
	br = branch
	df = diff
	dc = diff --cached
	lg = log -p
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	ls = ls-files
	dcommit = svn dcommit --rmdir --verbose

	; Show files ignored by git
	ign = ls-files -o -i --exclude-standard
