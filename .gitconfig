[user]
	name = AD7six
	email = andydawson76@gmail.com
[color]
	ui = true
	status = auto
	branch = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = yellow
	changed = green
	new = green bold
[core]
	excludesfile = "/home/andy/.gitignore"
	witespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol	
[alias]
	st = status
	di = diff
	co = checkout
	ci = commit
	br = branch
	df = diff
	dc = diff --cached
	lg = log -p
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	ls = ls-files

	; Show files ignored by git
	ign = ls-files -o -i --exclude-standard
